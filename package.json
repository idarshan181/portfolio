    "@sanity/vision": "^3.68.3",
    "@sentry/nextjs": "^8.47.0",
    "@spotlightjs/spotlight": "^2.9.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.38.2",
    "lucide-react": "^0.469.0",
    "next": "15.1.2",
    "next-intl": "^3.26.3",
    "next-sanity": "^9.8.30",
    "next-themes": "^0.4.4",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
