    "@types/pg": "^8.11.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/expect": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "checkly": "^4.15.0",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.1",
